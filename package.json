{
  "name": "vite-tailwind-alpinejs",
  "description": "A fork of Shopify Theme lab using Vite instead of Webpack and Alpine.js in place of Vue.js",
  "author": "James Auble",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "run-p -sr shopify:serve vite:watch",
    "deploy": "run-s vite:build && cd shopify && shopify2 theme push",
    "deploy:new": "run-s vite:build && cd shopify && shopify2 theme push --unpublished",
    "vite:watch": "cross-env NODE_ENV=development vite build --watch --mode 'development' --config .config/vite.config.js",
    "vite:build": "cross-env NODE_ENV=production vite build --mode 'production' --config .config/vite.config.js",
    "shopify:serve": "cd shopify && shopify2 theme serve",
    "shopify:pull": "cd shopify && shopify2 theme pull",
    "lint": "run-s -c lint:*",
    "lint:js": "eslint src/**/*.js --config .config/.eslintrc.js",
    "lint:css": "stylelint src/**/*.{css,sass,scss} --config .config/.stylelintrc.js",
    "lint:shopify": "cd shopify && shopify theme check",
    "fix": "run-s -c fix:*",
    "fix:js": "eslint src/**/*.js --config .config/.eslintrc.js --fix",
    "fix:css": "stylelint src/**/*.{css,sass,scss} --config .config/.stylelintrc.js --fix",
    "fix:shopify": "cd shopify && shopify theme check -a"
  },
  "dependencies": {
    "@alpinejs/focus": "^3.10.4",
    "@alpinejs/intersect": "^3.10.4",
    "alpinejs": "^3.10.4",
    "body-scroll-lock": "^4.0.0-beta.0",
    "liquid-ajax-cart": "^1.10.3",
    "tailwindcss": "^3.0.2"
  },
  "devDependencies": {
    "@modyqyw/vite-plugin-eslint": "^2.0.3",
    "@tailwindcss/typography": "^0.5.9",
    "@vitejs/plugin-vue": "^3.0.0",
    "autoprefixer": "^10.4.7",
    "cross-env": "^7.0.3",
    "eslint": "^8.20.0",
    "eslint-plugin-vue": "^9.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-html": "^1.5.0",
    "postcss-import": "^14.1.0",
    "rollup-plugin-delete": "^2.0.0",
    "stylelint": "^14.9.1",
    "stylelint-config-recommended": "^8.0.0",
    "vite": "^3.0.0",
    "vite-plugin-stylelint": "^3.0.2"
  }
}
