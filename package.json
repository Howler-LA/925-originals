{
  "name": "vite-tailwind-alpinejs",
  "description": "A fork of Shopify Theme lab using Vite instead of Webpack and Alpine.js in place of Vue.js",
  "author": "James Auble",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "run-p -sr shopify:dev vite:watch",
    "build": "run-s vite:build",
    "deploy": "run-s vite:build && shopify theme push --path shopify -e production",
    "deploy:dev": "run-s vite:build && shopify theme push --path shopify -e development",
    "deploy:staging": "run-s vite:build && shopify theme push --path shopify -e staging",
    "deploy:new": "run-s vite:build && shopify theme push --unpublished --path shopify",
    "vite:watch": "cross-env NODE_ENV=development vite --mode 'development' --config .config/vite.config.js",
    "vite:build": "cross-env NODE_ENV=production vite build --mode 'production' --config .config/vite.config.js",
    "shopify:dev": "shopify theme dev --path shopify --theme-editor-sync -e development",
    "shopify:pull": "shopify theme pull --path shopify",
    "shopify:pull-dev": "shopify theme pull -d --path shopify"
  },
  "devDependencies": {
    "@alpinejs/collapse": "^3.12.3",
    "@alpinejs/focus": "^3.12.3",
    "@modyqyw/vite-plugin-eslint": "^3.1.6",
    "@tailwindcss/nesting": "^0.0.0-insiders.565cd3e",
    "@tailwindcss/typography": "^0.5.9",
    "@vitejs/plugin-basic-ssl": "^1.0.1",
    "alpinejs": "^3.12.3",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "eslint": "^8.20.0",
    "eslint-plugin-vue": "^9.2.0",
    "fast-glob": "^3.3.1",
    "liquid-ajax-cart": "^1.11.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.27",
    "postcss-import": "^14.1.0",
    "rollup-plugin-delete": "^2.0.0",
    "stylelint": "^15.10.2",
    "stylelint-config-recommended": "^13.0.0",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.9",
    "vite-plugin-full-reload": "^1.0.5",
    "vite-plugin-page-reload": "^0.1.0",
    "vite-plugin-shopify": "^2.2.1",
    "vite-plugin-stylelint": "^4.3.0"
  },
  "dependencies": {
    "@alpinejs/morph": "^3.12.3"
  }
}
